include ../../elements/b-button-white-green/b-button-green--right.pug
include ../../elements/b-button-white-green/b-button-white--left.pug
mixin b-advertising
    aside.b-card-advertising.b-container.b-container--no-padd-table.b-container--no-padd-mobile
        .b-card-advertising__container
            picture.b-picture.b-picture--aside
                source(type="image/webp" srcset="../img/content/mobile/3-search/1/10-1x.webp 1x, ../img/content/mobile/3-search/1/10-2x.webp 2x" media="(max-width: 767px)")
                source(type="image/jpeg" srcset="../img/content/mobile/3-search/1/10-1x.jpg 1x, ../img/content/mobile/3-search/1/10-2x.jpg 2x" media="(max-width: 767px)")
                source(type="image/webp" srcset="../img/content/tablet/3-search/1/1-1x.webp 1x, ../img/content/tablet/3-search/1/1-2x.webp 2x" media="(max-width: 1023px)") 
                source(type="image/jpeg" srcset="../img/content/tablet/3-search/1/1-1x.jpg 1x, ../img/content/tablet/3-search/1/1-2x.jpg 2x" media="(max-width: 1023px)")
                source(type="image/webp" srcset="../img/content/desktop/3-search/1/1-1x.webp 1x, ../img/content/desktop/3-search/1/1-2x.webp 2x") 
                source(type="image/jpeg" srcset="../img/content/desktop/3-search/1/1-1x.jpg 1x, ../img/content/desktop/3-search/1/1-2x.jpg 2x")
                img(src="../img/content/desktop/3-search/11-1x.jpg")
            +b-button-white--left
            +b-button-green--right
        strong.b-card-advertising__title Распродажа классических коллекций
        .b-card-advertising__wrap
            span.b-card-advertising__caption -20% 
            span.b-card-advertising__post.b-card-advertising__post--margin на&nbsp;коллекции 
            span.b-card-advertising__post.b-card-advertising__post--border MIO, ENGLAND, FIGURE
        .b-card-advertising__wrapper
            span.b-card-advertising__description Успейте купить межкомнатные двери классической коллекции со скидкой&nbsp;20% до&nbsp;середины февраля.
            span.b-card-advertising__stock Акция действует до&nbsp;15&nbsp;февраля 2021г