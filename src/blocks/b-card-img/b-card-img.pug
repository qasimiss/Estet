mixin b-card-img()
    section.b-card-img
        .container
            a(href="javascript: void(0);", title="Go to directory").b-card-img--palitra
                picture.b-card-picture--palitra
                    source(type="image/webp" srcset="../img/content/mobile/2-door-types/1/2-1x.webp 1x, ../img/content/mobile/2-door-types/1/2-1x.webp 2x") 
                    source(type="image/webp" srcset="../img/content/mobile/2-door-types/1/2-1x.jpg 1x, ../img/content/mobile/2-door-types/1/2-1x.jpg 2x") 
                    img(src="../img/content/mobile/2-door-types/1/2-1x.jpg")
                .title Межкомнатные двери
                .b-card-icon--palitra
                    img(src="../img/icons/go-to.svg", alt="go to")
                    
                    
                        
